<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Main App Theme (Dark) -->
    <style name="Theme.JustBaatAI" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Status Bar & Navigation Bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

        <!-- Typography -->
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>

        <!-- Primary Colors -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/purple_700</item>
        <item name="colorOnPrimaryContainer">@color/purple_200</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/teal_700</item>
        <item name="colorOnSecondaryContainer">@color/teal_200</item>

        <!-- Surface Colors -->
        <item name="colorSurface">#1F1F1F</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/app_background</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- Background Colors -->
        <item name="android:colorBackground">@color/app_background</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Additional Theme Attributes -->
        <item name="elevationOverlayEnabled">true</item>
        <item name="android:windowBackground">@color/app_background</item>
    </style>

</resources>
