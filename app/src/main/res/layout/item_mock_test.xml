<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="#2B2B2B"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Test Title -->
        <TextView
            android:id="@+id/tvTestTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="General Knowledge Mock Test"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <!-- Description -->
        <TextView
            android:id="@+id/tvTestDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test your general knowledge across all topics"
            android:textColor="#9E9E9E"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:ellipsize="end"/>

        <!-- Details Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <!-- Questions Count -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_question"
                    app:tint="#5B9BFF"/>

                <TextView
                    android:id="@+id/tvQuestionsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 Questions"
                    android:textColor="#9E9E9E"
                    android:textSize="13sp"
                    android:layout_marginStart="4dp"/>

            </LinearLayout>

            <!-- Duration -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="16dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_timer"
                    app:tint="#5B9BFF"/>

                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 mins"
                    android:textColor="#9E9E9E"
                    android:textSize="13sp"
                    android:layout_marginStart="4dp"/>

            </LinearLayout>

            <!-- Difficulty Badge -->
            <TextView
                android:id="@+id/tvDifficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Easy"
                android:textColor="#4CAF50"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/bg_difficulty_badge"
                android:padding="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_marginStart="16dp"/>

        </LinearLayout>

        <!-- Start Button (Separate Row) -->
        <Button
            android:id="@+id/btnStartTest"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Start Test"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/bg_button_primary"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
