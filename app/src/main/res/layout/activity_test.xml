<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1E1E1E">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2B2B2B"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back"
                android:contentDescription="Exit Test"/>

            <TextView
                android:id="@+id/tvTestTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="General Knowledge Mock Test"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15:00"
                android:textColor="#FF5722"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/bg_timer"
                android:padding="8dp"/>

        </LinearLayout>

        <!-- Question Counter -->
        <TextView
            android:id="@+id/tvQuestionCounter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question 1 of 10"
            android:textColor="#9E9E9E"
            android:textSize="13sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Question -->
            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What is the capital of India?"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp"/>


            <!-- Options -->
            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@+id/rbOption1">

                <RadioButton
                    android:id="@+id/rbOption1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Option 1"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:padding="16dp"
                    android:background="@drawable/bg_option_selector"
                    android:layout_marginBottom="12dp"/>

                <RadioButton
                    android:id="@+id/rbOption2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Option 2"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:padding="16dp"
                    android:background="@drawable/bg_option_selector"
                    android:layout_marginBottom="12dp"/>

                <RadioButton
                    android:id="@+id/rbOption3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Option 3"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:padding="16dp"
                    android:background="@drawable/bg_option_selector"
                    android:layout_marginBottom="12dp"/>

                <RadioButton
                    android:id="@+id/rbOption4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Option 4"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:padding="16dp"
                    android:background="@drawable/bg_option_selector"/>

            </RadioGroup>


        </LinearLayout>

    </ScrollView>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#2B2B2B"
        android:elevation="4dp">

        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Previous"
            android:textColor="#5B9BFF"
            android:background="@drawable/bg_button_outlined_blue"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnSkip"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Skip"
            android:textColor="#FF9800"
            android:background="@drawable/bg_button_outlined_orange"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Next"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button_primary"/>

    </LinearLayout>

</LinearLayout>
