<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="#2B2B2B"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Exam Icon -->
        <ImageView
            android:id="@+id/ivExamIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_exam_placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Exam Name -->
        <TextView
            android:id="@+id/tvExamName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SSC CGL"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/ivExamIcon"
            app:layout_constraintEnd_toStartOf="@id/ivArrow"
            app:layout_constraintTop_toTopOf="@id/ivExamIcon"/>

        <!-- Papers Count -->
        <TextView
            android:id="@+id/tvPapersCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="433 Previous Year Papers"
            android:textColor="#9E9E9E"
            android:textSize="14sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@id/ivExamIcon"
            app:layout_constraintEnd_toStartOf="@id/ivArrow"
            app:layout_constraintTop_toBottomOf="@id/tvExamName"
            app:layout_constraintBottom_toBottomOf="@id/ivExamIcon"/>

        <!-- Arrow Icon -->
        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="#9E9E9E"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
