<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_current_affairs_gradient">

    <!-- Header Section with Blue Gradient -->


    <!-- SuperCoaching Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#2B2B2B"
        android:paddingTop="24dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- SuperCoaching Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is ADS Section"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:letterSpacing="0.05"/>

        <!-- Underline -->
        <View
            android:layout_width="200dp"
            android:layout_height="3dp"
            android:background="#5B9BFF"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"/>

        <!-- Section Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore All SuperCoaching"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_indicator"
            android:drawablePadding="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Categories Grid -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSuperCoachingCategories"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="16dp"/>

    </LinearLayout>

</LinearLayout>
