<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Main App Theme (Light) -->
    <style name="Theme.JustBaatAI" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Status Bar & Navigation Bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- Typography -->
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>

        <!-- Primary Colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/purple_200</item>
        <item name="colorOnPrimaryContainer">@color/purple_700</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/teal_700</item>
        <item name="colorOnSecondaryContainer">@color/white</item>

        <!-- Surface Colors -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurfaceVariant">@color/app_background</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- Background Colors -->
        <item name="android:colorBackground">@color/app_background</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Additional Theme Attributes -->
        <item name="elevationOverlayEnabled">true</item>
        <item name="android:windowBackground">@color/app_background</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/purple_500</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.JustBaatAI</item>
    </style>

    <!-- Home Icon Styles -->
    <style name="HomeIconContainerStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="HomeIconLayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="HomeIconImageViewStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/icon_background_purple</item>
        <item name="android:padding">10dp</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="HomeIconTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">2</item>
    </style>

    <!-- Profile Styles -->
    <style name="ProfileLabelTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="ProfileTextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="boxStrokeColor">@color/purple_500</item>
        <item name="hintTextColor">@color/purple_500</item>
    </style>

</resources>
